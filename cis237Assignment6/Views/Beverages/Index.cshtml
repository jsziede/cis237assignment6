@model IEnumerable<cis237Assignment6.Models.Beverage>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="form-group">
    <fieldset>
        <legend>Search Filter</legend>
        @{
            using (Html.BeginForm("Filter", "Beverages", FormMethod.Post, new { @class = "form-inline" }))
            {
                //This is a CSRF (Cross Site Request Forgery) Token
                @Html.AntiForgeryToken()

                <label for="make">Brand</label>
                @Html.TextBox("brand", (string)ViewBag.filterBrand)
                <label for="make">Pack (ml or lit)</label>
                @Html.TextBox("pack", (string)ViewBag.filterPack)
                <label for="min">Minimum Price</label>
                @Html.TextBox("minPrice", (string)ViewBag.filterMin)
                <label for="max">Maximum Price</label>
                @Html.TextBox("maxPrice", (string)ViewBag.filterMax)
                <br />
                <input type="submit" value="Filter" class="btn btn-info pull-right" />

            }
        }
    </fieldset>
</div>



<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.pack)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.active)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.pack)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.active)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
